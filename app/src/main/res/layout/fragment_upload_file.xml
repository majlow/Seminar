<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationFragment.UploadFileFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/uploadicon"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:background="#AADCD7"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_baseline_upload_file_24" />

        <TextView
            android:id="@+id/uploadtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uploadicon"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Upload File"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uploadtitle"
            android:layout_centerInParent="true"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Select a PDF file"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="@color/teal_700"
            android:fontFamily="@font/poppins_semibold"
            android:text="Select"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_select"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@color/teal_700"
            android:fontFamily="@font/poppins_semibold"
            android:text="Upload"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>

</FrameLayout>

